<!-- 可以设置为默认地址 -->
<block wx:for="{{myaddresslist}}" wx:key="item.id">
  <view class="default" catchtap="capture" data-id="{{item.id}}">
    <view class="child">
      <view class="title">我</view>
    </view>
    <view class="child">
      <view class="son">
        <view>{{item.Name}}</view>
        <view>{{item.phone}}</view>
      </view>
      <view>
       <view class="address">{{item.Address}}{{item.City}}{{item.PostCode}}</view>
      </view>
    </view>
</view>
<view class="tail">
  <view class="setting">
        <block wx:if="{{item.isdefault}}">
          <view>
            <van-checkbox value="{{ item.isdefault }}"></van-checkbox>
            <text class="addres">默认寄样地址</text>
        </view>
        </block>
        
        <block wx:else>
          <van-checkbox value="{{ item.isdefault }}" bind:change="onChange" data-id="{{item.id}}"></van-checkbox> 
          <text class="addres">设置为默认寄样地址</text>
        </block>
  </view>
  <view class="setting2">
      <van-icon name="edit"  class="edit" size="40rpx" catchtap="edit" data-id="{{item.id}}"/>
      <van-icon name="delete-o" class="delete" size="40rpx" catchtap="delete" data-id="{{item.id}}"/>
  </view>
</view>
</block>


<view class="addaddress">
  <van-button round type="info" size="small" catchtap="address">添加地址</van-button>
</view>