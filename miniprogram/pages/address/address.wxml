<view class="addresscontent">

  <view class="warehouse">
    <view class="addre_icon son">
      <view class="title"><van-icon name="location-o" class="icon"/>仓库地址</view>
    </view>
    <view class="iphone son">
      <text class="iphone_item1">犀牛仓库</text>
      <text class="iphone_item2">13723685482</text>
      <text class="iphone_item3">复制</text>
    </view>
    <view class="detailed son">深圳市龙华区龙华街道工业路壹城环智中心C座2607室</view>
  </view>

  <view class="foreign">
      <view class="target">目标国收件信息</view>
      <view class="select">
        <text class="en">请用英文填写</text>
        <text class="ads" catchtap="select">选择地址</text>
        <van-icon name="warning-o"  class="icon"/>
      </view>
      <view class="gather">
          <van-cell-group>
             <view class="child">
              <view class="title">Name：</view> 
              <van-field  value="{{ Adress.Name }}" placeholder="Please fill in the recipient‘s name" error-message="{{tipName}}" bindinput="nametip"/>
             </view>
             <view class="child">
              <view class="title">Phone：</view> 
              <van-field  value="{{ Adress.phone }}" placeholder="Please fill in the recipient‘s phone" error-message="{{tipphone}}"
              bindblur="phonetip"/>
             </view>
             <view class="child">
              <view class="title">Address：</view> 
              <van-field  value="{{ Adress.Address }}" placeholder="Please fill in the address" error-message="{{tipAddress}}"
              bindinput="Address"/>
             </view>
             <view class="child">
              <view class="title">City：</view> 
              <van-field  value="{{ Adress.City }}" placeholder="Please fill in the city" error-message="{{tipCity}}"
              bindinput="City"/>
             </view>
             <view class="child">
              <view class="title">PostCode：</view> 
              <van-field  value="{{ Adress.PostCode }}" placeholder="Please fill in the postcode" error-message="{{tipPostCode}}"
              bindinput="PostCode"/>
             </view>
          </van-cell-group>
      </view>
  </view>

      <view class="submit">
        <view class="submit-ti" catchtap="submit">提交收件信息</view>
      </view>
</view>